<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.SettingFragment">

    <ImageView
        android:id="@+id/fragment_setting_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_setting_nick_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_setting_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fragment_setting_image_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_setting_image_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_setting_image_view"
        app:layout_constraintBottom_toTopOf="@+id/fragment_setting_email"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/base_text"
        android:textStyle="bold"
        android:text="이름"/>
    <TextView
        android:id="@+id/fragment_setting_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fragment_setting_nick_name"
        app:layout_constraintEnd_toEndOf="@+id/fragment_setting_nick_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_setting_nick_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/base_text"
        android:textSize="30sp"
        android:textStyle="italic"
        android:text="이메일"/>

</androidx.constraintlayout.widget.ConstraintLayout>